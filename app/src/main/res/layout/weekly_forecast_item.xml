<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="weeklyForecast"
            type="com.mpol.weatherapp.model.WeeklyForecastWeatherData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/day_of_week_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{weeklyForecast.date}"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/daily_forecast_condition_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            app:dailyForecastIcon="@{weeklyForecast.icon}"
            app:layout_constraintStart_toEndOf="@id/day_of_week_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/daily_forecast_min_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{weeklyForecast.minTemperature}"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/daily_forecast_condition_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/daily_forecast_avg_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{weeklyForecast.avgTemperature}"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/daily_forecast_min_temperature_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/daily_forecast_max_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{weeklyForecast.maxTemperature}"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/daily_forecast_avg_temperature_text"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>